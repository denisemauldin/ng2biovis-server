<p id="notice"><%= notice %></p>

<h1>Vitals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Heartrate</th>
      <th>Bloodpressure</th>
      <th>Temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vitals.each do |vital| %>
      <tr>
        <td><%= vital.name %></td>
        <td><%= vital.heartrate %></td>
        <td><%= vital.bloodpressure %></td>
        <td><%= vital.temperature %></td>
        <td><%= link_to 'Show', vital %></td>
        <td><%= link_to 'Edit', edit_vital_path(vital) %></td>
        <td><%= link_to 'Destroy', vital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vital', new_vital_path %>
